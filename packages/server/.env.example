# CloudImgs Server Configuration

# Server
PORT=3003
HOST=0.0.0.0

# Database
DATABASE_URL=./data/cloudimgs.db

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Auth - Set a password to enable password protection
# PASSWORD=your_secure_password_here

# Base URL for external access (used in API responses)
BASE_URL=http://localhost:3003

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=60
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_WINDOW=60000
